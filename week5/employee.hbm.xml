<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "employee" table = "EMPLOYEE">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "ID_Employee">
            <generator class="native"/>
        </id>


        <property name = "name" column = "Name1" type = "string"/>
        <property name = "surName" column = "Surname" type = "string"/>
        <property name = "address" column = "Adress" type = "string"/>
        <property name = "salary" column = "Salary" type = "int"/>
        <property name = "age" column = "Age" type = "java.util.Date"/>
        <property name = "position" column = "Positions" type = "string"/>

    </class>
        </hibernate-mapping>